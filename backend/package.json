{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npx dotenv -- NODE_ENV=development APP=api nest start --watch",
    "start:prod": "node dist/apps/api/main",
    "start:scraper:dev": "npx dotenv -- NODE_ENV=development APP=scraper nest start scraper --watch",
    "start:scraper:prod": "node dist/apps/scraper/main",
    "start:telegram-bot:dev": "npx dotenv -- NODE_ENV=development APP=telegram-bot nest start telegram-bot --watch",
    "start:telegram-bot:prod": "node dist/apps/telegram-bot/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "schema:generate:dev": "npx dotenv -- npx prisma generate --schema ./libs/db/prisma/schema.prisma",
    "migrate:dev": "npx dotenv -e api.env.development -- npx prisma migrate dev --schema ./libs/db/prisma/schema.prisma",
    "studio:dev": "npx dotenv -e api.env.development -- npx prisma studio --schema ./libs/db/prisma/schema.prisma",
    "schema:generate:prod": "npx prisma generate --schema ./libs/db/prisma/schema.prisma",
    "migrate:prod": "npx prisma migrate deploy --schema ./libs/db/prisma/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json"
  },
  "dependencies": {
    "@clickhouse/client": "^1.11.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "6.8.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "kafkajs": "^2.2.4",
    "luxon": "^3.6.1",
    "nestjs-telegraf": "^2.9.1",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "telegram": "^2.26.22"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/clickhouse(|/.*)$": "<rootDir>/libs/clickhouse/src/$1",
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@app/db(|/.*)$": "<rootDir>/libs/db/src/$1"
    }
  }
}